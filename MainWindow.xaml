<Window
    x:Class="llama_server_winui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:llama_server_winui"
    xmlns:converters="using:llama_server_winui.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    Title="Llama Server Manager">

    <Grid x:Name="RootGrid" MinWidth="1100" MinHeight="600">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR -->
        <Grid Grid.Column="0" Background="#F8F8F8" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="20,20,20,30">
                <TextBlock Text="ðŸ¦™" FontSize="32" HorizontalAlignment="Center"/>
                <TextBlock Text="Llama Server" FontSize="14" FontWeight="SemiBold" 
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                <TextBlock Text="Manager" FontSize="14" Foreground="#666" 
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Spacing="5" Margin="10,0">
                <Button x:Name="HomeButton" Width="180" Height="50" 
                        Background="Transparent" HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left" Padding="15,0"
                        CornerRadius="8" Click="HomeButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <FontIcon Glyph="&#xE80F;" FontSize="16"/>
                        <TextBlock Text="Home" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="EnginesButton" Width="180" Height="50"
                        Background="#0078D4" Foreground="White"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left" Padding="15,0"
                        CornerRadius="8" Click="EnginesButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <FontIcon Glyph="&#xE74C;" FontSize="16"/>
                        <TextBlock Text="Runtime Engines" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Button x:Name="LogsButton" Width="180" Height="50"
                        Background="Transparent" HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left" Padding="15,0"
                        CornerRadius="8" Click="LogsButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <FontIcon Glyph="&#xE8A5;" FontSize="16"/>
                        <TextBlock Text="Logs" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="SettingsButton" Width="180" Height="50"
                        Background="Transparent" HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left" Padding="15,0"
                        CornerRadius="8" Click="SettingsButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <FontIcon Glyph="&#xE713;" FontSize="16"/>
                        <TextBlock Text="Settings" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="20" Spacing="5">
                <TextBlock Text="App Version 1.0.0" FontSize="11" Foreground="#999" HorizontalAlignment="Center"/>
                <HyperlinkButton Content="View on GitHub" FontSize="11" HorizontalAlignment="Center" 
                                 NavigateUri="https://github.com/yourusername/llama-server-winui"/>
            </StackPanel>
        </Grid>

        <!-- CENTER CONTENT -->
        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Padding="30,20,30,10" Background="#FAFAFA" 
                  BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Visibility="{Binding IsEnginesView, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Runtime Extension Packs" FontSize="20" FontWeight="SemiBold"/>
                    <TextBlock Text="Download and manage llama.cpp engine binaries" 
                               FontSize="13" Foreground="#666" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="0" Visibility="{Binding IsLogsView, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Server Logs" FontSize="20" FontWeight="SemiBold"/>
                    <TextBlock Text="Live output from llama.cpp runtime" 
                               FontSize="13" Foreground="#666" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center"
                            Visibility="{Binding IsEnginesView, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ComboBox SelectedIndex="0" Width="120">
                        <ComboBoxItem Content="Stable"/>
                        <ComboBoxItem Content="Beta"/>
                    </ComboBox>
                    <Button Content="â†» Refresh" Height="32" Background="#F0F0F0" Click="RefreshButton_Click"/>
                </StackPanel>

            </Grid>

            <ScrollViewer Padding="30,20" Visibility="{Binding IsEnginesView, Converter={StaticResource BoolToVisibilityConverter}}">
                <ItemsControl ItemsSource="{x:Bind Engines}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="local:LlamaEngine">
                            <Border Background="White" CornerRadius="8" 
                                    BorderBrush="#E0E0E0" BorderThickness="1" 
                                    Padding="20" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <Grid Grid.Row="0" Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                                            <Ellipse Width="10" Height="10" VerticalAlignment="Center"
                                                     Visibility="{x:Bind IsServerRunning, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
                                                     Fill="#4CAF50"/>
                                            <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                                            <Border Background="#F0F0F0" CornerRadius="4" Padding="8,3">
                                                <TextBlock Text="{x:Bind InstalledVersionDisplay, Mode=OneWay}" FontSize="12" Foreground="#666"/>
                                            </Border>
                                            <Border Background="#E8F5E9" CornerRadius="4" Padding="8,3"
                                                    Visibility="{x:Bind IsServerRunning, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                                                <TextBlock Text="RUNNING" FontSize="11" Foreground="#2E7D32" FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                            <Border Background="#F0F0F0" CornerRadius="4" Padding="8,3">
                                                <TextBlock Text="{x:Bind AvailableVersionDisplay, Mode=OneWay}" FontSize="12" Foreground="#666"/>
                                            </Border>

                                            <Button Command="{x:Bind DownloadAndInstallCommand}" 
                                                    Visibility="{x:Bind DownloadButtonVisibility, Mode=OneWay}"
                                                    Background="#2DA44E" Foreground="White" 
                                                    CornerRadius="4" Padding="15,8">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <ProgressRing IsActive="{x:Bind IsDownloading, Mode=OneWay}" 
                                                                  Width="16" Height="16" Foreground="White"
                                                                  Visibility="{x:Bind IsDownloading, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
                                                    <FontIcon Glyph="&#xE896;" FontSize="14"
                                                              Visibility="{x:Bind IsNotDownloadingVisibility, Mode=OneWay}"/>
                                                    <TextBlock Text="{x:Bind DownloadButtonText, Mode=OneWay}"
                                                               Visibility="{x:Bind IsNotDownloadingVisibility, Mode=OneWay}"/>
                                                    <TextBlock Text="Downloading..."
                                                               Visibility="{x:Bind IsDownloading, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Description -->
                                    <TextBlock Grid.Row="1" Text="{x:Bind Description}" 
                                               Foreground="#666" Margin="0,0,0,10"/>

                                    <!-- Model Selection Row -->
                                    <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,15">
                                        <TextBlock Text="Model File (.gguf / .bin)" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Text="{x:Bind ModelPath, Mode=OneWay}" IsReadOnly="True" PlaceholderText="Select a model..." Margin="0,0,10,0" Height="36" VerticalContentAlignment="Center"/>
                                            <Button Grid.Column="1" Content="..." Click="PickModel_Click" ToolTipService.ToolTip="Select Model" Height="36" Width="40"/>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Status Badge -->
                                    <Border Grid.Row="3" Background="#E8F5E9" CornerRadius="4" 
                                            Padding="10,5" HorizontalAlignment="Left" Margin="0,0,0,10"
                                            Visibility="{x:Bind IsInstalled, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE73E;" FontSize="14" Foreground="#4CAF50"/>
                                            <TextBlock Text="{x:Bind VersionStatusText, Mode=OneWay}" FontSize="12" 
                                                       Foreground="#2E7D32" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Download Progress -->
                                    <Grid Grid.Row="4" Margin="0,0,0,10"
                                          Visibility="{x:Bind IsDownloading, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <ProgressBar Grid.Row="0" Value="{x:Bind DownloadProgress, Mode=OneWay}" 
                                                     Maximum="100" Height="6" CornerRadius="3" Margin="0,0,0,5"/>
                                        <TextBlock Grid.Row="1" Text="{x:Bind StatusMessage, Mode=OneWay}" 
                                                   FontSize="12" Foreground="#0078D4" FontWeight="Medium"/>
                                    </Grid>

                                    <!-- Server Startup/Shutdown -->
                                    <Border Grid.Row="5" Background="#FFF8E1" CornerRadius="4"
                                            Padding="10,6" HorizontalAlignment="Left" Margin="0,0,0,10"
                                            Visibility="{x:Bind IsServerStarting, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <ProgressRing IsActive="True" Width="16" Height="16" Foreground="#F9A825"/>
                                            <TextBlock Text="Loading model..." FontSize="12" Foreground="#8D6E00" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Row="5" Background="#FDECEA" CornerRadius="4"
                                            Padding="10,6" HorizontalAlignment="Left" Margin="0,0,0,10"
                                            Visibility="{x:Bind IsServerStopping, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <ProgressRing IsActive="True" Width="16" Height="16" Foreground="#D73A49"/>
                                            <TextBlock Text="Stopping server..." FontSize="12" Foreground="#B71C1C" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Actions -->
                                    <Grid Grid.Row="6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <HyperlinkButton Grid.Column="0" NavigateUri="{x:Bind ReleaseNotesUrl}"
                                                         HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal" Spacing="5">
                                                <TextBlock Text="Release Notes"/>
                                                <FontIcon Glyph="&#xE70D;" FontSize="10"/>
                                            </StackPanel>
                                        </HyperlinkButton>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                                            <!-- Run Button (when installed and not running) -->
                                            <Button Click="RunServerButton_Click"
                                                    Visibility="{x:Bind RunButtonVisibility, Mode=OneWay}"
                                                    Background="#0078D4" Foreground="White" 
                                                    CornerRadius="4" Padding="15,8">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon Glyph="&#xE768;" FontSize="14"/>
                                                    <TextBlock Text="Run Server"/>
                                                </StackPanel>
                                            </Button>

                                            <!-- Stop Button (when running) -->
                                            <Button Command="{x:Bind StopServerCommand}"
                                                    Visibility="{x:Bind StopButtonVisibility, Mode=OneWay}"
                                                    Background="#D73A49" Foreground="White" 
                                                    CornerRadius="4" Padding="15,8">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon Glyph="&#xE71A;" FontSize="14"/>
                                                    <TextBlock Text="Stop Server"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                     </Grid>

                                     <!-- Installation Details Section -->
                                     <Border Grid.Row="7" 
                                             Background="#F8F9FA" 
                                             CornerRadius="6" 
                                             Padding="12" 
                                             Margin="0,15,0,0"
                                             Visibility="{x:Bind IsInstalled, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1">
                                         <StackPanel Spacing="8">
                                             <StackPanel Orientation="Horizontal" Spacing="8">
                                                 <FontIcon Glyph="&#xE946;" FontSize="14" Foreground="#666"/>
                                                 <TextBlock Text="Installation Path Details" FontWeight="SemiBold" FontSize="13" Foreground="#333"/>
                                             </StackPanel>

                                             <Grid>
                                                 <Grid.RowDefinitions>
                                                     <RowDefinition Height="Auto"/>
                                                     <RowDefinition Height="Auto"/>
                                                 </Grid.RowDefinitions>
                                                 <Grid.ColumnDefinitions>
                                                     <ColumnDefinition Width="140"/>
                                                     <ColumnDefinition Width="*"/>
                                                 </Grid.ColumnDefinitions>

                                                 <TextBlock Grid.Row="0" Grid.Column="0" Text="Extracted To:" 
                                                            FontSize="12" Foreground="#666" VerticalAlignment="Center" Margin="0,2"/>
                                                 <TextBlock Grid.Row="0" Grid.Column="1" 
                                                            Text="{x:Bind ExtractedFolderPath, Mode=OneWay}" 
                                                            FontSize="12" Foreground="#333" 
                                                            TextWrapping="Wrap" Margin="0,2"
                                                            IsTextSelectionEnabled="True"/>

                                                 <TextBlock Grid.Row="1" Grid.Column="0" Text="Binary Path:" 
                                                            FontSize="12" Foreground="#666" VerticalAlignment="Center" Margin="0,2"/>
                                                 <TextBlock Grid.Row="1" Grid.Column="1" 
                                                            Text="{x:Bind LlamaServerExePath, Mode=OneWay}" 
                                                            FontSize="11" Foreground="#333" 
                                                            TextWrapping="Wrap" Margin="0,2"
                                                            IsTextSelectionEnabled="True"/>
                                             </Grid>
                                             
                                             <Border Background="#EEEEEE" CornerRadius="4" Padding="8,4" Margin="0,4">
                                                 <TextBlock Text="{x:Bind LlamaServerVersion, Mode=OneWay}" 
                                                           FontSize="11" FontFamily="Consolas"
                                                           Foreground="#333" TextWrapping="Wrap"
                                                           IsTextSelectionEnabled="True"/>
                                             </Border>
                                         </StackPanel>
                                     </Border>
                                 </Grid>
                             </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Logs View -->
            <Grid Padding="30,20" Visibility="{Binding IsLogsView, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="Engine" FontSize="12" Foreground="#666" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding Engines}" 
                              SelectedItem="{Binding SelectedLogEngine, Mode=TwoWay}" 
                              DisplayMemberPath="Name" Width="260"/>
                    <Button Content="Clear Logs" Height="32" Background="#F0F0F0" Click="ClearLogsButton_Click"/>
                </StackPanel>

                <Border Grid.Row="1" Background="White" CornerRadius="8" 
                        BorderBrush="#E0E0E0" BorderThickness="1" Padding="10" Margin="0,15,0,0">
                    <ListView x:Name="LogsListView" ItemsSource="{Binding SelectedLogEntries}"
                              SelectionMode="None" IsItemClickEnabled="False">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding TimestampDisplay}" Foreground="#999" FontSize="11"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Message}" 
                                               FontSize="12" TextWrapping="Wrap"
                                               Foreground="{Binding IsError, Converter={StaticResource LogErrorColorConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>
        </Grid>

        <!-- RIGHT PANEL - ACTIVE SERVER -->
        <Grid Grid.Column="2" x:Name="ActiveServerPanel" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1,0,0,0"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" Padding="20,15" 
                    BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <TextBlock Text="Active Server" FontSize="16" FontWeight="SemiBold"/>
            </Border>

            <ScrollViewer Grid.Row="1" Padding="20">
                <StackPanel Spacing="20">
                    <!-- Status Card -->
                    <Border Background="White" CornerRadius="8" Padding="15"
                            BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel Spacing="12">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Ellipse Width="12" Height="12" Fill="#4CAF50"/>
                                <TextBlock Text="Running" FontWeight="SemiBold" FontSize="14"/>
                            </StackPanel>

                            <TextBlock Text="{x:Bind ActiveEngine.Name, Mode=OneWay, FallbackValue='No Engine'}" 
                                       FontSize="18" FontWeight="Bold"/>
                            <TextBlock Text="{x:Bind ActiveEngine.CurrentVersion, Mode=OneWay, FallbackValue='--'}" 
                                       FontSize="12" Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- Metrics -->
                    <Border Background="White" CornerRadius="8" Padding="15"
                            BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel Spacing="15">
                            <TextBlock Text="Performance" FontWeight="SemiBold" FontSize="14"/>

                            <!-- CPU Sparkline -->
                            <StackPanel Spacing="6">
                                <Grid>
                                    <TextBlock Text="CPU Usage" FontSize="12" Foreground="#666"/>
                                    <TextBlock Text="{x:Bind ActiveEngine.CurrentCpuPercent, Mode=OneWay, Converter={StaticResource PercentageToStringConverter}, FallbackValue='--'}"
                                               FontSize="12" FontWeight="Bold" HorizontalAlignment="Right"/>
                                </Grid>
                                <Border Height="40" Background="#F4F6F8" CornerRadius="4" Padding="2">
                                    <ItemsControl ItemsSource="{x:Bind ActiveEngine.CpuHistory, Mode=OneWay}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Spacing="2"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Width="3" Height="{Binding Value}" Background="#0078D4" CornerRadius="1" VerticalAlignment="Bottom"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                            </StackPanel>

                            <!-- Memory Sparkline -->
                            <StackPanel Spacing="6">
                                <Grid>
                                    <TextBlock Text="Memory" FontSize="12" Foreground="#666"/>
                                    <TextBlock Text="{x:Bind ActiveEngine.CurrentMemoryBytes, Mode=OneWay, Converter={StaticResource BytesToMemoryStringConverter}, FallbackValue='--'}"
                                               FontSize="12" FontWeight="Bold" HorizontalAlignment="Right"/>
                                </Grid>
                                <Border Height="40" Background="#F4F6F8" CornerRadius="4" Padding="2">
                                    <ItemsControl ItemsSource="{x:Bind ActiveEngine.MemoryHistory, Mode=OneWay}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Spacing="2"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Width="3" Height="{Binding Value}" Background="#2DA44E" CornerRadius="1" VerticalAlignment="Bottom"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                            </StackPanel>

                            <!-- Uptime -->
                            <Grid>
                                <TextBlock Text="Uptime" FontSize="12" Foreground="#666"/>
                                <TextBlock Text="{x:Bind ActiveEngine.CurrentUptime, Mode=OneWay, Converter={StaticResource TimeSpanToStringConverter}, FallbackValue='--:--:--'}" 
                                           FontSize="12" FontWeight="Bold" HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Port -->
                            <Grid>
                                <TextBlock Text="Port" FontSize="12" Foreground="#666"/>
                                <TextBlock Text="{x:Bind ActiveEngine.CurrentPort, Mode=OneWay, FallbackValue='8080'}" 
                                           FontSize="12" FontWeight="Bold" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Quick Actions -->
                    <StackPanel Spacing="10">
                        <Button Background="#D73A49" Foreground="White" 
                                HorizontalAlignment="Stretch" CornerRadius="6" Padding="0,12"
                                Click="StopActiveServerButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE71A;" FontSize="16"/>
                                <TextBlock Text="Stop Server" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>

                        <Button Click="ViewLogsButton_Click"
                                Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                                HorizontalAlignment="Stretch" CornerRadius="6" Padding="0,12">
                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE8A5;" FontSize="16"/>
                                <TextBlock Text="View Full Logs"/>
                            </StackPanel>
                        </Button>

                        <Button Click="RestartServerButton_Click"
                                Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                                HorizontalAlignment="Stretch" CornerRadius="6" Padding="0,12">
                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE72D;" FontSize="16"/>
                                <TextBlock Text="Restart Server"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- RIGHT PANEL - EMPTY STATE -->
        <Grid Grid.Column="2" x:Name="EmptyStatePanel" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1,0,0,0"
              Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
                <FontIcon Glyph="&#xE74C;" FontSize="64" Foreground="#CCC"/>
                <TextBlock Text="No server running" FontSize="16" Foreground="#999" 
                           HorizontalAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Text="Select an engine and click Run" FontSize="13" Foreground="#BBB" 
                           HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="200"/>
            </StackPanel>
        </Grid>

        <!-- LOADING OVERLAY -->
        <Grid x:Name="LoadingOverlay" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="3" Background="#80FFFFFF" 
              Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
                <ProgressRing IsActive="True" Width="50" Height="50"/>
                <TextBlock Text="Syncing with GitHub..." FontSize="16" FontWeight="SemiBold" Foreground="#333"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
