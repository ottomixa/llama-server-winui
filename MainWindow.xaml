<Window
    x:Class="llama_server_winui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:llama_server_winui"
    mc:Ignorable="d"    
    Title="Llama Server WinUI">

    <Grid Background="#F3F3F3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="20" Spacing="10">
            <TextBlock Text="ðŸ¦™ Llama Server Manager" Style="{StaticResource TitleTextBlockStyle}" FontSize="24"/>
            <ComboBox SelectedIndex="0" VerticalAlignment="Center" Margin="20,0,0,0">
                <ComboBoxItem Content="Stable"/>
                <ComboBoxItem Content="Beta"/>
            </ComboBox>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{x:Bind Engines}" SelectionMode="None" Margin="10,0,10,10">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,5,0,5"/>
                    <Setter Property="Padding" Value="0"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:LlamaEngine">
                    <Border Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Header Row -->
                            <StackPanel Orientation="Horizontal" Spacing="10" Grid.Column="0">
                                <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" FontSize="16"/>

                                <Border Background="#F0F0F0" CornerRadius="4" Padding="5,2">
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <TextBlock Text="{x:Bind CurrentVersion, Mode=OneWay}" Foreground="Gray" FontSize="12"/>
                                        <FontIcon Glyph="&#xE72A;" FontSize="10" Foreground="Gray"/>
                                        <TextBlock Text="{x:Bind LatestVersion}" FontWeight="Bold" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <Border Grid.Column="1" Background="#F0F0F0" CornerRadius="4" Padding="8,2">
                                <TextBlock Text="{x:Bind Tag}" FontSize="12" Foreground="#666"/>
                            </Border>

                            <!-- Description Row -->
                            <TextBlock Grid.Row="1" Text="{x:Bind Description}" Foreground="#666" Margin="0,5,0,10" Grid.ColumnSpan="2"/>

                            <!-- Model Selection Row -->
                            <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,10" Grid.ColumnSpan="2">
                                <TextBlock Text="Model File (.gguf)" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{x:Bind ModelPath, Mode=OneWay}" IsReadOnly="True" PlaceholderText="Select a model..." Margin="0,0,10,0"/>
                                    <Button Grid.Column="1" Content="..." Click="PickModel_Click" ToolTipService.ToolTip="Select Model"/>
                                </Grid>
                            </StackPanel>

                            <!-- Progress Bar (visible during download) -->
                            <ProgressBar Grid.Row="3" Grid.ColumnSpan="2" 
                                         Value="{x:Bind DownloadProgress, Mode=OneWay}" 
                                         Maximum="100"
                                         Visibility="{x:Bind IsDownloading, Mode=OneWay}"
                                         Margin="0,0,0,10"
                                         Height="6"/>

                            <!-- Footer Row -->
                            <StackPanel Grid.Row="4" Orientation="Horizontal" Spacing="15" VerticalAlignment="Center" Grid.ColumnSpan="1">
                                <HyperlinkButton NavigateUri="{x:Bind ReleaseNotesUrl}">
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <TextBlock Text="Release Notes"/>
                                        <FontIcon Glyph="&#xE70D;" FontSize="10"/>
                                    </StackPanel>
                                </HyperlinkButton>
                                <TextBlock Text="{x:Bind StatusMessage, Mode=OneWay}" VerticalAlignment="Center" Foreground="Orange" FontWeight="Medium"/>
                            </StackPanel>

                            <!-- Action Buttons (right column) -->
                            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                                <TextBlock Text="{x:Bind ValidationMessage, Mode=OneWay}" VerticalAlignment="Center" Foreground="Red" FontSize="12" Margin="0,0,10,0"/>

                                <ProgressRing IsActive="{x:Bind IsDownloading, Mode=OneWay}" 
                                              Visibility="{x:Bind IsDownloading, Mode=OneWay}" 
                                              Width="25" Height="25"/>

                                <!-- Download Button -->
                                <Button Command="{x:Bind DownloadAndInstallCommand}" 
                                    Visibility="{x:Bind InverseVisibility(IsInstalled), Mode=OneWay}" 
                                    Background="#2DA44E" Foreground="White" CornerRadius="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE896;"/>
                                        <TextBlock Text="Download"/>
                                    </StackPanel>
                                </Button>

                                <!-- Run Server Button -->
                                <Button Command="{x:Bind RunServerCommand}"
                                        Visibility="{x:Bind RunButtonVisibility(IsInstalled, IsServerRunning), Mode=OneWay}"
                                        Background="#0078D4" Foreground="White" CornerRadius="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE768;"/>
                                        <TextBlock Text="Run Server"/>
                                    </StackPanel>
                                </Button>

                                <!-- Stop Server Button -->
                                <Button Command="{x:Bind StopServerCommand}"
                                        Visibility="{x:Bind StopButtonVisibility(IsServerRunning), Mode=OneWay}"
                                        Background="#D73A49" Foreground="White" CornerRadius="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE71A;"/>
                                        <TextBlock Text="Stop Server"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- Installation Details Section (visible when installed) -->
                            <Border Grid.Row="5" Grid.ColumnSpan="2" 
                                    Background="#F8F9FA" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="0,10,0,0"
                                    Visibility="{x:Bind IsInstalled, Mode=OneWay}"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <StackPanel Spacing="8">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE946;" FontSize="14" Foreground="#666"/>
                                        <TextBlock Text="Installation Details" FontWeight="SemiBold" FontSize="13" Foreground="#333"/>
                                    </StackPanel>
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Zip Download Path -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Zip Downloaded To:" 
                                                   FontSize="12" Foreground="#666" VerticalAlignment="Center" Margin="0,2"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                                   Text="{x:Bind ZipDownloadPath, Mode=OneWay}" 
                                                   FontSize="12" Foreground="#333" 
                                                   TextWrapping="Wrap" Margin="0,2"
                                                   IsTextSelectionEnabled="True"/>

                                        <!-- Extracted Folder Path -->
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Extracted To:" 
                                                   FontSize="12" Foreground="#666" VerticalAlignment="Center" Margin="0,2"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                                   Text="{x:Bind ExtractedFolderPath, Mode=OneWay}" 
                                                   FontSize="12" Foreground="#333" 
                                                   TextWrapping="Wrap" Margin="0,2"
                                                   IsTextSelectionEnabled="True"/>

                                        <!-- llama-server.exe Status -->
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="llama-server.exe:" 
                                                   FontSize="12" Foreground="#666" VerticalAlignment="Center" Margin="0,2"/>
                                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="6" Margin="0,2">
                                            <FontIcon Glyph="{x:Bind LlamaServerExeStatusIcon(IsLlamaServerExePresent), Mode=OneWay}" 
                                                      FontSize="12"
                                                      Foreground="{x:Bind LlamaServerExeStatusColor(IsLlamaServerExePresent), Mode=OneWay}"/>
                                            <TextBlock Text="{x:Bind LlamaServerExeStatusText(IsLlamaServerExePresent), Mode=OneWay}" 
                                                       FontSize="12" 
                                                       Foreground="{x:Bind LlamaServerExeStatusColor(IsLlamaServerExePresent), Mode=OneWay}"/>
                                            <TextBlock Text="{x:Bind LlamaServerExePath, Mode=OneWay}" 
                                                       FontSize="11" Foreground="#888" 
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="400"
                                                       ToolTipService.ToolTip="{x:Bind LlamaServerExePath, Mode=OneWay}"
                                                       Visibility="{x:Bind IsLlamaServerExePresent, Mode=OneWay}"
                                                       IsTextSelectionEnabled="True"/>
                                        </StackPanel>

                                        <!-- llama-server.exe Version -->
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Version Output:" 
                                                   FontSize="12" Foreground="#666" VerticalAlignment="Top" Margin="0,2"/>
                                        <Border Grid.Row="3" Grid.Column="1" 
                                                Background="#EEEEEE" CornerRadius="4" Padding="8,4" Margin="0,2"
                                                Visibility="{x:Bind IsLlamaServerExePresent, Mode=OneWay}">
                                            <TextBlock Text="{x:Bind LlamaServerVersion, Mode=OneWay}" 
                                                       FontSize="11" FontFamily="Consolas"
                                                       Foreground="#333" 
                                                       TextWrapping="Wrap"
                                                       IsTextSelectionEnabled="True"/>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Border>

                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="2" Background="#80FFFFFF" 
              Visibility="{x:Bind BoolToVisibility(IsLoading), Mode=OneWay}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
                <ProgressRing IsActive="True" Width="50" Height="50"/>
                <TextBlock Text="Checking for latest version..." FontSize="16" FontWeight="SemiBold" Foreground="#333"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
