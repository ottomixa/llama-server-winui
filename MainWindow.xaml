<Window
    x:Class="llama_server_winui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:llama_server_winui"
    mc:Ignorable="d">

    <Grid Background="#F3F3F3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="20" Spacing="10">
            <TextBlock Text="Runtime Extension Packs" Style="{StaticResource TitleTextBlockStyle}"/>
            <ComboBox SelectedIndex="0" VerticalAlignment="Center">
                <ComboBoxItem Content="Stable"/>
                <ComboBoxItem Content="Beta"/>
            </ComboBox>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{x:Bind Engines}" SelectionMode="None">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,5,0,5"/>
                    <Setter Property="Padding" Value="0"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:LlamaEngine">
                    <Border Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" FontSize="16"/>

                                <Border Background="#F0F0F0" CornerRadius="4" Padding="5,2">
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <TextBlock Text="{x:Bind CurrentVersion}" Foreground="Gray" FontSize="12"/>
                                        <FontIcon Glyph="&#xE72A;" FontSize="10" Foreground="Gray"/>
                                        <TextBlock Text="{x:Bind LatestVersion}" FontWeight="Bold" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <Border Grid.Column="1" Background="#F0F0F0" CornerRadius="4" Padding="8,2">
                                <TextBlock Text="{x:Bind Tag}" FontSize="12" Foreground="#666"/>
                            </Border>

                            <TextBlock Grid.Row="1" Text="{x:Bind Description}" Foreground="#666" Margin="0,5,0,15"/>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
                                <HyperlinkButton Content="Release Notes" Foreground="Gray">
                                    <HyperlinkButton.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="5">
                                                <TextBlock Text="Release Notes"/>
                                                <FontIcon Glyph="&#xE70D;" FontSize="10"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </HyperlinkButton.ContentTemplate>
                                </HyperlinkButton>
                                <TextBlock Text="{x:Bind StatusMessage}" VerticalAlignment="Center" Foreground="Orange"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="10">
                                <ProgressRing IsActive="{x:Bind IsDownloading}" Visibility="{x:Bind IsDownloading, Mode=OneWay}" Width="25" Height="25"/>

                                <Button Command="{x:Bind DownloadAndInstallCommand}" 
                                    Visibility="{x:Bind InverseVisibility(IsInstalled), Mode=OneWay}" 
                                    Background="#2DA44E" Foreground="White" CornerRadius="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE896;"/>
                                        <TextBlock Text="Download"/>
                                    </StackPanel>
                                </Button>

                                <Button Command="{x:Bind RunServerCommand}"
                                        Visibility="{x:Bind IsInstalled, Mode=OneWay}"
                                        Background="#0078D4" Foreground="White" CornerRadius="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE768;"/>
                                        <TextBlock Text="Run Server"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>