<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="llama_server_winui.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:llama_server_winui"
    xmlns:converters="using:llama_server_winui.Converters">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Bool to Visibility Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

            <!-- Performance Converters -->
            <converters:PercentageToStringConverter x:Key="PercentageToStringConverter"/>
            <converters:BytesToMemoryStringConverter x:Key="BytesToMemoryStringConverter"/>
            <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter"/>
            <converters:LogErrorColorConverter x:Key="LogErrorColorConverter"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
